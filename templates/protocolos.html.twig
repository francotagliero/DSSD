{% extends 'layout.html.twig' %}

{% block title %}
	| Protocolos
{% endblock %}

{% block main %}
	<section class="container">

		{% if protocolos %}
      <h1>Protocolos</h1>
        <table class="table">
      <thead>
        <tr>
            <th scope="col">Titulo</th>
            <th scope="col">Fecha Inicio</th>
            <th scope="col">Fecha Fin</th>
            <th scope="col">Modo ejecucion</th>
            <th scope="col">Estado</th>
            <th scope="col">Accion</th>
        </tr>
      </thead>
      <tbody>
        {% for protocolo in protocolos %}
        <tr>
            <td>{{protocolo.nombre}}</td>
            <td>{{protocolo.fecha_inicio}}</td>
            <td>{{protocolo.fecha_fin}}</td>
            <td> {% if protocolo.es_local == 1 %} 
                    <span class="label label-primary">Local</span>
                {% else %} 
                    <span class="label label-warning">Remoto</span>
                {% endif %}
            </td>
            <td>{{protocolo.estado}}</td>
            <td>
              {% if protocolo.puntaje == 0 %}
                <a href="./?action=ejecutar&n={{ protocolo.id_protocolo }}" type="button" class="btn btn-primary btn-sm">Ejecutar</a>
              {% else %} 
                    <a href="#" class="btn btn-primary btn-sm disabled" role="button" aria-disabled="true">Ejecutado</a>
              {% endif %}
            </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
    {% else %}
      <div class="alert alert-success" role="alert">
        No hay protocolos cargados.
      </div>
  {% endif %}
  </section>
  <section class="container">
    <form method="POST" name="instanciacion" action="./?action=instanciacion">
        <div class="form-group" id="formNombreProyecto">
          <label for="nameProyecto">Nombre del Proyecto</label>
          <div class="input-group">
            <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
            <input type="text" class="form-control" name="name_proyecto" id="name_proyecto" required="required">
          </div>
        </div>

        <input class="btn btn-success" type="submit" name="instanciar" id="instanciar" value="Instanciar"><br><br>

      </form>
  </section>

{% endblock %}
