<!DOCTYPE html>
<html lang="es">
<head>
	<meta charset="UTF-8">
	<link rel="stylesheet" href="css/bootstrap.min.css">
	
	<link href="css/jquery-confirm.min.css" rel="stylesheet">
  	<link href="css/jquery-confirm.css" rel="stylesheet">
	
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	{% block estilosCss %}
	{% endblock %}

	{% block jQueryScript %}
	{% endblock %}

	<title>
		{% block title %}
		{% endblock %}
	</title>
	
</head>

<body>

	<header>
		{% if titulo != "" %}
			<h1>{{ titulo }}</h1>
		{% endif %}
	</header>

	{% if message %}
		<div class="alert alert-warning" role="alert">
			{{ message }}
		</div>
	{% endif %}

	<section class="container">
		<nav class="navbar navbar-expand-lg navbar-light bg-light">
			{% if isLogged %}
				Tipo usuario: {{ tipoUsuario }}
				<a class="navbar-brand" href="index.php?action=proyectos">Proyectos</a>
				<a class="navbar-brand" href="index.php?action=protocolos">Protocolos</a>
				<a class="navbar-brand" href="index.php?action=logout">Logout</a>
			{% else %}
  				<a class="navbar-brand" href="index.php?action=home">Login</a>
			{% endif %}

		</nav>
	</section>

	{% block contentPage %}
	{% endblock %}

	<script src="js/jquery-3.2.1.min.js"></script>
	<script src="js/bootstrap.min.js"></script>
	{% block scripts %}
	{% endblock %}
</body>
</html>
